{
    "name": "ENet",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "ENet",
        "args": {
            "backbone": "",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "Bonn2016",
        "args":{
            "data_dir": "/home/gustavu92/Desktop/trabalho-MO434/data/",
            "batch_size": 16,
            "base_size": 512,
            "augment": true,
            "shuffle": false,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "split": "train",
            "num_workers": 4
        }
    },

    "val_loader": {
        "type": "Bonn2016",
        "args":{
            "data_dir": "/home/gustavu92/Desktop/trabalho-MO434/data/",
            "batch_size": 16,
            "base_size": 512,
            "augment": true,
            "shuffle": false,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "test_loader": {
        "type": "Bonn2016",
        "args":{
            "data_dir": "/home/gustavu92/Desktop/trabalho-MO434/data/",
            "batch_size": 16,
            "base_size": 512,
            "augment": true,
            "shuffle": false,
            "scale": false,
            "flip": false,
            "rotate": false,
            "blur": false,
            "val": true,
            "split": "test",
            "num_workers": 4
        }
    },


    "optimizer": {
        "type": "Adam",
        "differential_lr": true,
        "args":{
            "lr": 1e-4

        }
    },

    "loss": "FocalLoss",
    "class_weight": [1,1,1],
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "monitor": "max val_Mean_IoU",
        "early_stop": 3,
        "tensorboard": false,
        "log_dir": "saved/runs",
        "log_per_iter": 5,
        "val": true,
        "val_per_epochs": 1
    }
}
